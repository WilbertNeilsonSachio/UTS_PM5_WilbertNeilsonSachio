<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name"
        style="@style/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="196dp"
        android:text="@string/easy"
        app:layout_constraintEnd_toStartOf="@id/btnMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="196dp"
        android:text="@string/medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnEasy"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <Button
        android:id="@+id/btnHard"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="@string/hard"
        app:layout_constraintEnd_toStartOf="@id/btnExpert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEasy" />

    <Button
        android:id="@+id/btnExpert"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/btnMedium"
        app:layout_constraintStart_toEndOf="@id/btnHard"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/expert" />

</androidx.constraintlayout.widget.ConstraintLayout>